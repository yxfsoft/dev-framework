# 新功能任务模板（iterate-mode 使用，在已有项目上新增功能）

id: "{{TASK_ID}}"
type: "new_feature"
iteration: "{{ITERATION_ID}}"
title: "{{TITLE}}"

# 功能描述
description: |
  {{FEATURE_DESCRIPTION}}

# 集成点（与现有代码如何连接）
integration_points:
  - module: "{{MODULE_NAME}}"
    how: "{{HOW_TO_INTEGRATE}}"

# 数据流
data_flow: |
  {{DATA_FLOW_DESCRIPTION}}

# 技术方案
design:
  approach: |
    {{APPROACH_DESCRIPTION}}
  why_this_approach: |
    {{WHY_CHOSEN}}
  edge_cases:
    - scenario: "{{EDGE_CASE_1_SCENARIO}}"
      input: "{{EDGE_CASE_1_INPUT}}"
      expected: "{{EDGE_CASE_1_EXPECTED}}"
  config_params:
    - "{{CONFIG_KEY}}: {{CONFIG_VALUE}}"

# 受影响文件
affected_files:
  - "{{FILE_PATH_1}}"

# 验收标准（按维度分组）
acceptance_criteria:
  functional:
    - id: "{{TASK_ID}}-AC1"
      desc: "端到端功能可用"
      status: FAIL
    - id: "{{TASK_ID}}-AC2"
      desc: "集成点正确连接"
      status: FAIL
    - id: "{{TASK_ID}}-AC3"
      desc: "新增完整测试覆盖"
      status: FAIL

# 回归测试
regression_test: "运行全量 L1，结果 ≥ 基线"

# 状态（状态机: pending → in_progress → ready_for_verify → ready_for_review → PASS/rework/failed）
status: pending
current_step: null
owner: ""
retries: 0
depends: []
commits: []
notes: ""
done_evidence:
  tests: []
  logs: []
  notes: []
review_result: null
