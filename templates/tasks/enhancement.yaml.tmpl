# 功能增强任务模板（iterate-mode 使用）

id: "{{TASK_ID}}"
type: "enhancement"
iteration: "{{ITERATION_ID}}"
title: "{{TITLE}}"
priority: "P1"           # P0(阻断) / P1(必须) / P2(可选)

# 增强描述
current_behavior: |
  {{CURRENT_BEHAVIOR}}
desired_behavior: |
  {{DESIRED_BEHAVIOR}}
affected_modules:
  - "{{MODULE_1}}"

# 用户体验考量
ux_considerations: |
  {{UX_DETAILS}}

# 技术方案
design:
  approach: |
    {{APPROACH_DESCRIPTION}}
  why_this_approach: |
    {{WHY_CHOSEN}}
  edge_cases:
    - scenario: "{{EDGE_CASE_1_SCENARIO}}"
      input: "{{EDGE_CASE_1_INPUT}}"
      expected: "{{EDGE_CASE_1_EXPECTED}}"

# 受影响文件
affected_files:
  - "{{FILE_PATH_1}}"

# 验收标准（按维度分组）
acceptance_criteria:
  functional:
    - id: "{{TASK_ID}}-AC1"
      desc: "增强后的功能按预期工作"
      status: FAIL
    - id: "{{TASK_ID}}-AC2"
      desc: "现有功能不受影响"
      status: FAIL
    - id: "{{TASK_ID}}-AC3"
      desc: "新增测试覆盖增强部分"
      status: FAIL

# 回归测试
regression_test: "运行全量 L1，结果 ≥ 基线"

# 状态（状态机: pending → in_progress → ready_for_verify → ready_for_review → PASS/rework/failed）
status: pending
current_step: null
owner: ""
retries: 0
depends: []
commits: []
notes: ""
decisions_ref: []
done_evidence:
  tests: []
  logs: []
  notes: []
review_result: null
