# 特性任务模板（init-mode 使用）

id: "{{TASK_ID}}"
type: "new_feature"
iteration: "iteration-0"
title: "{{TITLE}}"

# 技术方案（必须包含 why）
design:
  approach: |
    {{APPROACH_DESCRIPTION}}
  why_this_approach: |
    {{WHY_CHOSEN}}
  edge_cases:
    - "{{EDGE_CASE_1}}"
    - "{{EDGE_CASE_2}}"
  config_params:
    - "{{CONFIG_KEY}}: {{CONFIG_VALUE}}  # {{COMMENT}}"

# 受影响文件（Analyst 填写）
affected_files:
  - "{{FILE_PATH_1}}"
  - "{{FILE_PATH_2}}"

# 验收标准（全部初始 FAIL）
acceptance_criteria:
  - id: "{{TASK_ID}}-AC1"
    desc: "{{CRITERION_1}}"
    status: FAIL
  - id: "{{TASK_ID}}-AC2"
    desc: "{{CRITERION_2}}"
    status: FAIL

# 状态（状态机: pending → in_progress → ready_for_verify → ready_for_review → PASS/rework/failed）
status: pending
owner: ""
retries: 0

# 依赖
depends: []

# 执行记录（Developer/Verifier/Reviewer 填写）
commits: []
notes: ""
done_evidence:
  tests: []
  logs: []
  notes: []
review_result: null
